@{
    ViewBag.Title = "Alerta vencimiento campañas";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=11" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="viewport" content="initial-scale=1.0, maximum-scale=2.0" />
    <link rel="shortcut icon" href="" />
    <meta name="description" content="Comex II - Alerta vencimiento campañas" />
    <meta name="author" content="Sermaluc S.A." />


    @Styles.Render("~/Content/css")

    <style type="text/css">
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: #ACB4B9 url('/pu46/pux/ComexIIConsultas/Content/jqueryui1114/images/page-loader.gif') 50% 50% no-repeat;
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=80)";
        }

        body.loading .modal {
            overflow: hidden;
        }

        body.loading .modal {
            display: block;
        }

        .table2 {
            border: 1px solid #ACB4B9;
            background-color: #FFFFFF;
            font-family: Verdana;
            font-size: 9px;
        }

        .table3 {
            border: 0px;
            background-color: #FFFFFF;
            font-family: Verdana;
            font-size: 9px;
        }

        .TDBorder {
            border-color: #ACB4B9;
            border-style: solid;
            border-width: 1px;
        }
    </style>
</head>

<body onload="cargaTipoProducto(0), cargaTipoSegmento(), cargaDataAlertaCampana()">
    <center>
        <div id="wait" class="modal"></div>

        <div id="dialog-message" title="Alerta vencimiento campañas" style="display: none">
            <br />
            <strong>
                <label class="labelBE" id="lblMsg" style="text-align: center"></label>
            </strong>
        </div>

        <div id="dialog-error" title="Error" style="display: none">
            <br />
            <strong>
                <label class="labelBE2" id="lblError" style="text-align: center;">
                </label>
            </strong>
            <br />
            <div id="myDIV" style="display: none">
                <code id="error1"></code>
                <br />
                <code id="error2"></code>
                <br />
                <code id="error3"></code>
            </div>
        </div>

        <div id="divFiltrosODP">
            <table style="width: 100%">
                <tr>
                    <td>
                        <div class="Titulo1BE">
                            Alerta vencimiento campañas
                        </div>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <a href="#"><img src="~/Content/Images/excel-icon.png" alt="Exportar" height="20" width="20">&nbsp;exportar</a>&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="#"><img src="~/Content/Images/print-icon.png" alt="Imprimir" height="20" width="20">&nbsp;imprimir</a>
                    </td>
                </tr>
            </table>

            <table style="width: 100%; border-top: 5px">
                <tr>
                    <td colspan="3">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td width="20%">
                        <img src="~/Content/Images/flecha.jpg" style="width:12px;height:12px" />&nbsp;<b><label class="labelBE">Tipo Producto: </label></b>
                    </td>
                    <td width="30%">
                        <div class="custom-select" style="width: 90%; float: left">
                            <select id="cboTipoProducto"></select>
                        </div>
                    </td>
                    <td width="60%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="20%">
                        <img src="~/Content/Images/flecha.jpg" style="width:12px;height:12px" />&nbsp;<b><label class="labelBE">Segmento: </label></b>
                    </td>
                    <td width="30%">
                        <div class="custom-select" style="width: 90%; float: left">
                            <select id="cboSegmento"></select>
                        </div>
                    </td>
                    <td width="60%">&nbsp;</td>
                </tr>
                <tr>
                    <td width="20%">
                        <label class="labelBE2">Fecha :</label>
                    </td>
                    <td width="20%" colspan="2">
                        <label class="labelBE2">Desde</label> <input type="text" placeholder="dd/mm/aaaa" />  <label class="labelBE2">Hasta</label> <input type="text" placeholder="dd/mm/aaaa" />
                    </td>
                </tr>
                <tr>
                    <td  width="80%" align="right">
                        <button id="btnConsultar" class="botonBE">
                            Consultar
                        </button>
                    </td>
                    <td align="right">
                        <button id="btnLimpiar" class="botonBE">
                            Limpiar
                        </button>
                    </td>
                </tr>
            </table>

            <table style="width: 100%; border-top: 5px">
                <tr>
                    <td colspan="9">
                        &nbsp;
                    </td>
                </tr>
                <tr>
                    <td colspan="9">
                        <img src="~/Content/Images/flecha.jpg" style="width:12px;height:12px" />&nbsp;<b><label class="labelBE">Detalle :</label></b>
                    </td>
                </tr>
                <tr>
                    <td colspan="9">
                        <table id="tblVencimientoCampana" style="width: 90%; border: 1px solid; border-color: darkgray"></table>
                    </td>
                </tr>
            </table>
            
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

    </center>

</body>
</html>